/longestparenthesis {
    0 dict begin
    /a exch def
    /ml 0 def
    0 1 a length 1 sub {
        /l exch def
        l 1 add 1 a length 1 sub {
            /r exch def
            /depth 0 def
            /valid true def
            l 1 r {
                /i exch def
                a i get 40 eq {
                    /depth depth 1 add def
                } {
                    /depth depth 1 sub def
                    depth 0 lt {
                        /valid false def
                        exit
                    } if
                } ifelse
            } for
            depth 0 ne {
                /valid false def
            } if
            valid {
                /ml ml r l sub 1 add max def
            } if
        } for
    } for
    ml
    end
} bind def

