# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
indent_style = space
indent_size = 2

[*.pl]
indent_style = tab
indent_size = 4

[*.pm]
indent_style = tab
indent_size = 4

[*.t]
indent_style = space
indent_size = 4

[*.toml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[{README,tox.ini}]
indent_style = space
indent_size = 2
