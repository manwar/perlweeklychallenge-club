#! /usr/bin/env raku

@*ARGS[0] ~~ /^(\d\d)\:(\d\d) \s? ([<[ap]>m]?)$/ && $2.chars
   ?? ($2 eq "pm"
       ?? say "{ $0 eq '12' ?? '12' !! $0 + 12 }:{ $1 }"
       !! say "{ $0 eq '12' ?? '00' !! $0  }:{ $1 }"
      )
   !! (12 <= $0 < 24
       ?? say "{ $0 eq '12' ?? '12' !! ($0 - 12).fmt('%02d') }:{ $1 } pm" 
       !! say "{ $0 eq '00'|'24' ?? '12' !! $0 }:{ $1 } am"
      );

