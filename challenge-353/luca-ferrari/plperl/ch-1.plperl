CREATE OR REPLACE FUNCTION
pwc353.task1_plperl( text[] )
RETURNS int
AS $CODE$

   my ( $sentences ) = @_;

   my @w = $sentences->@*;
   return ( sort { $b <=> $a }
	    map { scalar split /\s+/, $_   } $sentences->@* )[ 0 ];
   
$CODE$
LANGUAGE plperl;
